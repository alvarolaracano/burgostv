<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/estilo_lista"
    android:orientation="horizontal"
    android:padding="5dip" >

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:background="@drawable/imagen_bg"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/url_foto"
            android:layout_width="90dip"
            android:layout_height="49dip"
            android:src="@drawable/noticia" />
        
    </LinearLayout>

    <!-- Titulo de la noticia -->

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toLeftOf="@+id/flecha"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_marginRight="5dip"
        android:text="La Diputación Provincial firma un convenio de colaboración con Aspanias"
        android:textColor="#040404"
        android:textSize="12dip"
        android:textStyle="bold"
        android:typeface="sans" />

     <TextView
        android:id="@+id/fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/titulo"
        android:gravity="right"
        android:text="09/11"
        android:textSize="9dip"
        android:textColor="#073278"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/flecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/flecha" />
    
    <!-- OCULTOS -->
	
	<TextView
            android:id="@+id/url_foto_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:visibility="gone" />
	
    <TextView android:id="@+id/descripcion"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Descripcion  de la noticia." 
              android:visibility="gone" />
    
    
    <TextView android:id="@+id/url_video"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="url_video" 
              android:visibility="gone"/>
    
    <!-- FIN OCULTOS -->

</RelativeLayout>