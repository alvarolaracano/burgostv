<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.alvarolara.burgostv"
      android:versionCode="5"
      android:versionName="1.4">
    <application android:icon="@drawable/icono" android:label="@string/app_name">
        <activity android:name=".SplashActivity" android:screenOrientation="portrait"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PrincipalActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.alvarolara.burgostv.PrincipalActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!-- Abrir la portada cuando se detecte la url principal -->
            <intent-filter>
			 <action android:name="android.intent.action.VIEW" />
			 <category android:name="android.intent.category.DEFAULT" />
			 <category android:name="android.intent.category.BROWSABLE" />
			 <data android:scheme="http" android:host="www.burgostv.es" android:pathPattern="/" />
			</intent-filter>
        </activity>
        <activity android:name=".ObjetosActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.alvarolara.burgostv.ObjetosActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>    
        </activity>
        <activity android:name=".UnObjetoActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.alvarolara.burgostv.UnObjetoActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!-- Lo abrimos cuando llegue un enlace de la URL noticias, reportajes, mas deporte o burgos en persona -->   
            <intent-filter>
			 <action android:name="android.intent.action.VIEW" />
			 <category android:name="android.intent.category.DEFAULT" />
			 <category android:name="android.intent.category.BROWSABLE" />
			 <data android:scheme="http" android:host="www.burgostv.es" android:pathPattern="/noticias/.*" />
			 <data android:scheme="http" android:host="www.burgostv.es" android:pathPattern="/reportajes/.*" />
			 <data android:scheme="http" android:host="www.burgostv.es" android:pathPattern="/mas-deporte/.*" />
			 <data android:scheme="http" android:host="www.burgostv.es" android:pathPattern="/burgos-en-persona/.*" />
			</intent-filter>
        </activity>
        <activity android:name=".BuscarActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.alvarolara.burgostv.BuscarActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>    
        </activity>
        <activity android:name=".BusquedaActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.alvarolara.burgostv.BusquedaActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>    
        </activity>
        <activity android:name=".VideoActivity" android:screenOrientation="landscape" android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="com.alvarolara.burgostv.VideoActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>    
        </activity>
        <activity android:name=".DirectoActivity" android:screenOrientation="landscape" android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="com.alvarolara.burgostv.DirectoActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>    
        </activity>
        <activity android:name=".ErrorActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.alvarolara.burgostv.ErrorActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>    
        </activity>
    </application>
    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>